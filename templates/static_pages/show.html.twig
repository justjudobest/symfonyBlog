{% block title %}StaticPages{% endblock %}

{% block body %}
    <h1>StaticPages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ static_page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ static_page.title }}</td>
            </tr>
