{% include '/layouts/base.html.twig' %}
<body class="">
<div class="wrapper ">
    {% include '/layouts/sidebar.html.twig' %}
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="header text-center">
                    <h1 class="title">Categories</h1>
                </div>
                <div class="row">
                    <div class="">
                        <a href="{{ path('category_new') }}" class="btn" type="submit">Create new category!</a>
                        <form class="form-inline my-2 my-lg-0"  method="get">
                            <input class="form-control mr-sm-2" type="password" value="" aria-label="Search" name="search-post">
                            <button class="btn btn-default my-2 my-sm-0" type="submit">Search</button>
                        </form>

                        <table>
                            <tr>
                                <th><a href="">title</a></th>
                                <th><a href="">created</a></th>
                                <th><a href="">updated</a></th>

                                <th>Fast edit</th>
                                <th>Delete</th>

                            </tr>
                            {% for category in categories %}
                            <tr>
                                    <td><a href="{{ path('category_edit', {'id': category.id}) }}">{{ category.name }}</a></td>
                                    <td><a href="">{{ category.created }}</a></td>
                                   <td><a href="">{{ category.updated }}</a></td>




                                    <td>
                                        <form method="get" action="">
                                            <input type="hidden" name="_method" value="UPDATE">
                                            <button class="btn">Fast Edit</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button class="btn">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>

                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
        </footer>
    </div>
</div>




